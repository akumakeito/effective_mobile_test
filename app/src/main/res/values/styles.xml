<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.App.TitleLarge</item>
        <item name="titleCentered">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">@dimen/txt16</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">@dimen/txt14</item>

    </style>

    <style name="TextAppearance.App.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/txt9</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/txt12</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>


    <style name="TextAppearance.App.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/txt10</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="TextAppearance.App.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">@dimen/txt14</item>
    </style>

    <style name="TextAppearance.App.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/txt10</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>


    <style name="Widget.App.IconButton.Filled" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="iconSize">32dp</item>
        <item name="android:minWidth">@dimen/add_button_size</item>
        <item name="android:paddingLeft">@dimen/spacing4</item>
        <item name="android:paddingRight">@dimen/spacing4</item>
        <item name="android:paddingTop">@dimen/spacing4</item>
        <item name="android:paddingBottom">@dimen/spacing4</item>
        <item name="iconPadding">3dp</item>
    </style>

    <style name="Widget.App.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconSize">@dimen/favorite_icon_size</item>
        <item name="iconTint">@color/pink</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Widget.App.Button.TonalButton" parent="Widget.Material3.Button.TonalButton">
        <item name="android:maxWidth">@dimen/btn_height</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Small.</item>
        <item name="backgroundTint">@color/light_grey</item>

    </style>


    <style name="ToolbarText" parent="Widget.Material3.Toolbar.Surface">
        <item name="titleTextAppearance">@style/TextAppearance.App.TitleMedium</item>
    </style>

    <style name="OutlinedInputHint" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/txt16</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="OutlinedInputText" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/txt16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="DropDownTextAppearance" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/txt14</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="OutlinedTextField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/box_stroke_selector</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Small.</item>
        <item name="android:textColor">@color/black</item>
        <item name="endIconTint">@color/dark_grey</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextAppearance">@style/OutlinedInputHint</item>
        <item name="android:textAppearance">@style/OutlinedInputText</item>
        <item name="boxBackgroundColor">@color/light_grey</item>
        <item name="boxStrokeWidth">0dp</item>

    </style>

    <style name="App.OutlinedBox.ExposedDropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="dropDownBackgroundTint">@color/white</item>
        <item name="background">@color/white</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/box_stroke_selector</item>
        <item name="android:textAppearance">@style/DropDownTextAppearance</item>
    </style>

    <style name="ShapeAppearance.Material3.Corner.Small." parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/input_corner_radius</item>

    </style>


    <style name="Widget.App.Button." parent="Widget.Material3.Button">
        <item name="android:height">@dimen/btn_height</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Small.</item>
        <item name="android:textAppearance">@style/ButtonText</item>
    </style>

    <style name="Widget.App.TextButton.Icon" parent="Widget.Material3.Button.TextButton.Icon">
        <item name="android:height">@dimen/text_btn_height</item>
        <item name="android:textAppearance">@style/DropDownTextAppearance</item>
        <item name="iconTint">@color/dark_grey</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="Widget.App.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:height">@dimen/text_btn_height</item>
        <item name="android:textAppearance">@style/DropDownTextAppearance</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">@dimen/spacing10</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="ButtonText" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">@dimen/txt14</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="ChipSuggestion" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/chip_color_selector</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipSurfaceColor">@color/chip_color_selector</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="shapeAppearance">@style/ChipShape</item>
        <item name="closeIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIcon">@drawable/icon_type_small_close__state_default</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Chip</item>
    </style>

    <style name="ThemeOverlay.App.Chip" parent="">
        <item name="colorOnSurface">@color/light_grey</item>
        <item name="colorSurfaceContainerLow">@color/light_grey</item>
        <item name="colorSecondaryContainer">@color/dark_blue</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

    </style>

    <style name="ChipShape" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">50%</item>
    </style>



    <style name="NavBarStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/NavBarActiveItemStyle</item>
        <item name="itemIconSize">@dimen/nav_bar_icon_size</item>
        <item name="itemTextColor">@color/nav_bar_text_selector</item>
        <item name="itemPaddingBottom">@dimen/spacing21</item>
        <item name="itemPaddingTop">@dimen/spacing16</item>
        <item name="labelVisibilityMode">labeled</item>

    </style>


    <style name="NavBarActiveItemStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="Widget.App.RatingBar.Small" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/orange</item>
        <item name="android:progressBackgroundTint">@color/orange</item>
    </style>

    <style name="FavoriteTabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:background">@color/light_grey</item>
        <item name="tabTextAppearance">@style/TextAppearance.App.TitleMedium</item>
        <item name="tabTextColor">@color/tab_text_color_selector</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicator">@drawable/tab_indicator_shape</item>
    </style>

    <style name="OnImageTabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabBackground">@drawable/tab_selector</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">4dp</item>
        <item name="tabPaddingEnd">4dp</item>
        <item name="tabMaxWidth">@dimen/spacing16</item>
    </style>


    <style name="ProgressBar" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/pink</item>
    </style>


</resources>